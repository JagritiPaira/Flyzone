<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#F6F9FB"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coiny"
        android:text="WELCOME"
        android:textColor="#084D68"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:drawableEnd="@drawable/ic_baseline_emoji_emotions_24"
        android:drawableRight="@drawable/ic_baseline_emoji_emotions_24"
        android:textSize="30dp"></TextView>







    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColorHint="#084D68"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/light"

        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColorHint="#084D68"
        android:textAlignment="gravity"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_marginLeft="50dp"
        android:background="@drawable/light"
        android:layout_marginTop="20dp"
        android:hint="Enter your Password"

        android:id="@+id/password"
        />


    <Button
        android:layout_width="200dp"
        android:text="LogIn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:fontFamily="@font/coiny"
        android:background="@drawable/btn"
        android:textColor="#ECECE3"
        android:textSize="22dp"
        android:layout_height="wrap_content"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:text="Or"
        android:fontFamily="@font/coiny"
        android:textSize="20dp"
        android:layout_marginLeft="200dp"
        android:textColor="#084D68"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:id="@+id/sin"
    android:layout_width="200dp"
    android:text="Signup"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="110dp"
    android:fontFamily="@font/coiny"
    android:background="@drawable/tmr"
    android:textColor="#084D68"
    android:textSize="22dp"
    android:layout_height="wrap_content"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:text="Forget Password?"
        android:fontFamily="@font/coiny"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:textColor="#084D68"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>

